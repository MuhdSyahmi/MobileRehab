<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBGRecyclerView"
    tools:context=".ViewPatientDetails">

    <TextView
        android:id="@+id/textView_pd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/patient_details"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView_patientname"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@id/textView_pd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/roundedcorner"
        android:backgroundTint="@color/colorRecyclerView"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_patienticnumber"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@id/textView_patientname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/roundedcorner"
        android:backgroundTint="@color/colorRecyclerView"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_patientaddress"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@id/textView_patienticnumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/roundedcorner"
        android:backgroundTint="@color/colorRecyclerView"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_patientphonenumber"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@id/textView_patientaddress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/roundedcorner"
        android:backgroundTint="@color/colorRecyclerView"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="20sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecylerView_viewpatient"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_patientphonenumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/roundedcorner"
        android:backgroundTint="@color/colorRecyclerView"
        android:fontFamily="sans-serif-condensed-medium"
        android:paddingStart="10dp"
        android:paddingEnd="10dp" />

</RelativeLayout>