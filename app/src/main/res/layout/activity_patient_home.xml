<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".PatientHome">

    <TextView
        android:id="@+id/textView_startdate"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView_datecounter"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:textColor="@color/colorButton"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView_userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView_randomquotes"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        android:background="#000E0D0D"
        android:fontFamily="sans-serif-condensed-medium"
        android:backgroundTint="@color/colorPrimaryDark"
        android:gravity="center"
        android:textColor="@color/colorButton"
        android:textSize="22sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="150dp"
        android:columnCount="3"
        android:orientation="vertical"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:rowCount="3">

        <Button
            android:id="@+id/button_patientviewprofile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:background="@drawable/roundedcorner"
            android:layout_column="0"
            android:gravity="center"
            android:adjustViewBounds="true"
            android:drawableTop="@drawable/ic_account_circle"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed-medium"
            android:scaleType="centerInside"
            android:text="@string/update_profile" />

        <Button
            android:id="@+id/button_patientviewlocation"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="1"
            android:background="@drawable/roundedcorner"
            android:layout_column="0"
            android:gravity="center"
            android:text="@string/view_location"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:adjustViewBounds="true"
            android:drawableTop="@drawable/ic_map"
            android:fontFamily="sans-serif-condensed-medium"
            android:scaleType="centerInside" />

        <Button
            android:id="@+id/button_patientviewappointment"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:background="@drawable/roundedcorner"
            android:layout_column="1"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:adjustViewBounds="true"
            android:textAlignment="center"
            android:drawableTop="@drawable/ic_calendar_today"
            android:fontFamily="sans-serif-condensed-medium"
            android:scaleType="centerInside"
            android:text="@string/view_appointment" />

        <Button
            android:id="@+id/button_call"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="1"
            android:background="@drawable/roundedcorner"
            android:layout_column="1"
            android:gravity="center"
            android:text="@string/emergency_call"
            android:layout_marginLeft="30dp"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:adjustViewBounds="true"
            android:drawableTop="@drawable/ic_settings_phone"
            android:fontFamily="sans-serif-condensed-medium"
            android:scaleType="centerInside" />

    </GridLayout>

    <Button
        android:id="@+id/button_logout"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="670dp"
        android:background="@drawable/roundedcorner"
        android:gravity="center"
        android:text="@string/logout"
        android:fontFamily="sans-serif-condensed-medium"
        android:textAlignment="center" />

</RelativeLayout>