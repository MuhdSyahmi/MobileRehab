<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorRecyclerView"
    android:fontFamily="sans-serif-condensed-medium"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView_patient_appointmentid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView_patient_name"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-condensed-medium" />

    <TextView
        android:id="@+id/textView_patient_appointmenttime"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-condensed-medium" />

    <TextView
        android:id="@+id/textView_patient_appointmentdate"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-condensed-medium" />

    <TextView
        android:id="@+id/textView_patient_appointmentstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>