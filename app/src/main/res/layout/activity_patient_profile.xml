<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".PatientProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView_updateprofile"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:text="@string/update_profile"
            android:textSize="30sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/textView_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_updateprofile"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:text="Full Name: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_identificationno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_patientname"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:text="Identification No: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_patienticnumber"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:text="Address: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_patientaddress"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:text="Phone Number: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_patientphonenumber"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:text="Email: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_dayscounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_patientemail"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:text="Days away from drugs: "
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editText_patientname"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView_fullname"
            android:background="@drawable/roundedcorner"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <EditText
            android:id="@+id/editText_patienticnumber"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textView_identificationno"
            android:background="@drawable/roundedcorner"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <EditText
            android:id="@+id/editText_patientaddress"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView_address"
            android:background="@drawable/roundedcorner"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <EditText
            android:id="@+id/editText_patientphonenumber"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView_phonenumber"
            android:background="@drawable/roundedcorner"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <EditText
            android:id="@+id/editText_patientemail"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@+id/textView_email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundedcorner"
            android:fontFamily="sans-serif-condensed-medium"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <EditText
            android:id="@+id/editText_patientstartdate"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textView_dayscounter"
            android:background="@drawable/roundedcorner"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:inputType="date"
            android:datePickerMode="calendar"
            android:focusable="true"
            android:fontFamily="sans-serif-condensed-medium"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <Button
            android:id="@+id/button_patientsave"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/roundedcorner"
            android:layout_below="@id/editText_patientstartdate"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/update_save" />
    </RelativeLayout>

</ScrollView>