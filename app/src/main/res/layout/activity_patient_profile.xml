<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".PatientProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView_userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView_updateprofile"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:text="@string/update_profile"
            android:textSize="30sp"
            android:textColor="@color/common_google_signin_btn_text_light_default"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            />

        <EditText
            android:id="@+id/editText_patientname"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/roundedcorner"
            android:layout_below="@+id/textView_updateprofile"
            android:hint="@string/full_name" />

        <EditText
            android:id="@+id/editText_patienticnumber"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/roundedcorner"
            android:layout_below="@id/editText_patientname"
            android:hint="@string/identification_number"/>

        <EditText
            android:id="@+id/editText_patientaddress"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/roundedcorner"
            android:layout_below="@+id/editText_patienticnumber"
            android:hint="@string/address"/>

        <EditText
            android:id="@+id/editText_patientphonenumber"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/roundedcorner"
            android:layout_below="@+id/editText_patientaddress"
            android:hint="@string/phone_number"/>

        <EditText
            android:id="@+id/editText_patientstartdate"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/roundedcorner"
            android:layout_below="@id/editText_patientphonenumber"
            android:hint="@string/days_away_from_drugs"
            android:clickable="true"
            android:inputType="date"
            android:datePickerMode="calendar"
            android:focusable="true" />

        <Button
            android:id="@+id/button_patientsave"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/roundedcorner"
            android:layout_below="@id/editText_patientstartdate"
            android:text="@string/save"/>
    </RelativeLayout>

</ScrollView>